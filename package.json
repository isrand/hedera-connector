{
  "name": "hedera-connector",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "buildDocs": "npm run generateOpenAPISpec && cd mkdocs && mkdocs build -d ../docs",
    "generateOpenAPISpec": "npm run build && node dist/utils/OpenAPISpecProvider.js './mkdocs/docs/assets/openapi.json'",
    "buildDockerImage": "nest build && docker build -t localhost:5000/hedera-connector:1.0.0 .",
    "generateKyberKeys": "node utils/kyber/generate-keys.js",
    "push": "docker push localhost:5000/hedera-connector:1.0.0",
    "start": "helm upgrade --install hedera-connector chart --wait",
    "stop": "helm delete hedera-connector",
    "restart": "npm run buildDockerImage && npm run push && npm run start",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --config './jest.config.json'"
  },
  "dependencies": {
    "@hashgraph/sdk": "2.29.0",
    "@nestjs/common": "10.0.5",
    "@nestjs/core": "10.0.5",
    "@nestjs/platform-express": "10.0.5",
    "@nestjs/platform-socket.io": "10.0.5",
    "@nestjs/swagger": "7.1.1",
    "@nestjs/websockets": "10.0.5",
    "crystals-kyber": "5.1.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "nano": "10.1.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.2.0",
    "socket.io": "4.6.1",
    "socket.io-client": "4.6.1"
  },
  "eslintConfig": {
    "root": true
  },
  "devDependencies": {
    "@nestjs/cli": "10.0.5",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.5",
    "@types/express": "4.17.13",
    "@types/jest": "29.2.4",
    "@types/lodash": "4.14.197",
    "@types/node": "18.11.18",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "29.3.1",
    "prettier": "2.3.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.8.2"
  }
}
