{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["./test/"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageReporters": ["text-summary", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
